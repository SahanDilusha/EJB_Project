<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <display-name>bidsystem</display-name>

    <servlet>
        <servlet-name>LoginPage</servlet-name>
        <jsp-file>/login.html</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginPage</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AddProduct</servlet-name>
        <jsp-file>/add_product_page.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddProduct</servlet-name>
        <url-pattern>/new_product</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SingleProduct</servlet-name>
        <jsp-file>/single-product.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>SingleProduct</servlet-name>
        <url-pattern>/single_product</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>BidManagement</servlet-name>
        <jsp-file>/bid-management.html</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>BidManagement</servlet-name>
        <url-pattern>/bid-management</url-pattern>
    </servlet-mapping>

</web-app>
